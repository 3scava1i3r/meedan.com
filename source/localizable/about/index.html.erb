---
layout: "default"
slug: "about"
---
<!-- About Branding -->
<section class="about--branding">
  <h3><%= t("about.branding.heading") %></h3>
</section>

<!--About Promo-bar-->
<div class="about--promo-bar">
  <%= t("about.we_love") %>
  <a href="mailto:hello@meedan.com" class="btn btn-primary">
    <%= t("about.email_us") %>
  </a>
</div>

<section class="about--recent-press">
  <!-- Recent press -->
  <%= partial "partials/press_blurbs" %>
</section>

<!-- Our Vision -->
<section class="about--our-vision">
  <h3><%= t("about.our_vision.header") %></h3>
  <% t("about.our_vision.paragraphs").each do |e| %>
    <p><%= e[:text] %></p>
  <% end %>
</section>

<!-- Challenges -->
<section class="about--challenges">
  <h3><%= t("about.challenges.header") %></h3>
  <p>
    <em><%= t("about.challenges.text") %></em>
    <br>
    <%= t("about.challenges.text_2") %>
  </p>
</section>

<!-- Products Photo -->
<div class="about--products-photo">
  <div class="content">
    <h3><%= t("about.products.header") %></h3>
    <p>
      <em><%= t("about.challenges.text") %></em>
      <br>
      <%= t("about.challenges.text_2") %>
    </p>
  </div>
</div>

<!-- Methods -->
<section class="about--methods">
  <h3><%= t("about.methods.header") %></h3>
  <p>
    <em> <%= t("about.methods.text") %> </em>
    <br>
    <%= t("about.methods.text_2") %>
  </p>
</section>

<!-- Public Engagement -->
<div class="about--public-engagement-photo">
  <div class="content">
    <h3><%= t("about.public_engage.header") %></h3>
    <p>
      <em><%= t("about.public_engage.text") %></em>
      <br>
      <%= t("about.public_engage.text_2") %>
    </p>
  </div>
</div>

<!-- Team  -->
<section class="about--team">
  <h3><%= t("home.team.header") %></h3>
  <p><%= t("home.team.text") %></p>
  <ul>
    <% data.team_members.each do |member| %>
    <li>
      <img src="/images/team/<%= member.name %>@1x.jpg" alt="<%= member.name %>" srcset="/images/team/<%= member.name %>@2x.jpg 2x">
      <div class="name"><%= member.fullname %></div>
      <div class="title"><%= member.title %></div>
    </li>
    <% end %>
  </ul>
</section>

<!-- Contact -->
<%= partial "partials/contact" %>
