---
layout: "default"
slug: "updates"
---

<%# Updates %>
<section>
  <div class="section-inner">
    <h3><%= t("updates.header") %></h3>
    <p><%= t("updates.text") %></p>
    <ul class="updates__list">
      <% data.updates.each do |update| %>
      <li>
        <h4><%= update.date %></h4>
        <p>
          <a href="<%= update.url %>" target="_blank" rel="noreferrer noopener"><%= update.title %></a>
          <br />
          <span><%= update.author %></span>
        </p>
      </li>
      <% end %>
    </ul>
  </div>
</section>
