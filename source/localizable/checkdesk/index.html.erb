---
layout: "default"
slug: "checkdesk"
---
<%= partial "partials/language_toggle.html" %>

<div class="branding">
  <div class="splash">
   <img width="500" class="screenshot" src="/images/2x/screenshots/<%= t("checkdesk.branding.splash") %>" alt="Checkdesk">
  </div>

  <svg class="checkdesklogo" width="300"><use xlink:href="#checkdeskwhite" /></svg>

  <p class="slogan">
    <%= t("checkdesk.branding.slogan") %>
  </p>
</div>

<section class="explanations">
  <% t("checkdesk.explanations").each do |e| %>
    <div class="description">
      <h4><%= e[:header] %></h4>
      <p><%= e[:text] %></p>
      <img class="screenshot" src="/images/1x/screenshots/<%= e[:img] %>" srcset="/images/2x/screenshots/<%= e["img"] %> 2x" alt="<%= e["alt"] %>"/>
    </div>
  <% end %>
</section>

<section class="testimonials">
  <% t("checkdesk.testimonials.quotes").each do |t| %>
    <div class="twocolumn">
        <div class="quote">
          <p><span class="quote-glyph">&ldquo;</span><%= t[:quote] %></p>
          <p class="bottomquote"><%= t[:attribution] %></p>
          <p class="bottomquote"><a href="<%= t[:website_url] %>" target="_blank">
          <%= t[:website_name] %></a></p>
        </div>
     </div>
  <% end %>
</section>

<section class="newsletter">
  <h3><%= t("checkdesk.newsletter.header") %></h3>
  <p><%= t("checkdesk.newsletter.summary") %></p>

  <form class="tinyletter" action="https://tinyletter.com/Checkdesk_Checklist" method="post" target="popupwindow" onsubmit="window.open('https://tinyletter.com/Checkdesk_Checklist', 'popupwindow', 'scrollbars=yes,width=800,height=600');return true">

    <div class="form-group">
      <label for="tlemail">Type your email:</label>
      <input type="email" placeholder='<%= t("checkdesk.newsletter.placeholder_text") %>' name="email" id="tlemail" />
      <input type="hidden" value="1" name="embed"/>
      <input type="submit" value='<%= t("checkdesk.newsletter.button_text") %>' />
    </div>
  </form>
</section>

