---
layout: "default"
slug: "check"
ogp:
  og:
    site: "@check"
    card: "summary"
    title: "Check"
    url: "http://meedan.com/check"
    type: "business.business"
    business:
      contact_data:
        street_address: "972 Mission St."
        locality: "San Francisco"
        postal_code: "94103"
        country_name: "USA"
    image:
      '': "http://meedan.com/images/logos/check-open-graph-logo.png"
      type: "image/png"
      width: "300"
      height: "300"
    locale:
      '': en_US
    description: "Verify digital media consistently and openly for your team and your readers."
---

<%# Branding %>
<section class="check--branding">
  <div class="section-inner">

    <%= partial "partials/image", :locals => {
        :type => "svg",
        :name => "check-white",
        :url  => "/#{I18n.locale}/check" } %>

    <p class="slogan">
      <%= t("check.branding.slogan") %>
    </p>

    <div class="drawing-1">
      <div class="in-progress">
        <h5>In progress</h5>
        <%= partial "partials/drawing_social_media_card" %>
      </div>
      <div class="false">
        <h5>False</h5>
        <%= partial "partials/drawing_social_media_card" %>
      </div>
      <div class="true">
        <h5>True</h5>
        <%= partial "partials/drawing_social_media_card" %>
      </div>
    </div>
  </div>
</section>

<section class="check--featured-client">
  <div class="section-inner">
    <h3>
      As used during
      <span class="link__electionland">
        <a href='https://medium.com/meedan-updates/checking-the-vote-how-check-was-used-during-electionland-4242dd875e4b#.eaxlz5rvo'>Electionland</a>
        <%= partial "partials/image", :locals => {
        :type => "svg",
        :name => "electionland-small",
        :url  => "https://medium.com/meedan-updates/checking-the-vote-how-check-was-used-during-electionland-4242dd875e4b#.eaxlz5rvo" } %>
      </span>
      <span class="link__crosscheck">
        and&nbsp;
        <a href='https://firstdraftnews.com/crosscheck-launches/'>CrossCheck</a>
        <%= partial "partials/image", :locals => {
        :type => "png",
        :name => "crosscheck-small",
        :url  => "https://firstdraftnews.com/crosscheck-launches/" } %>
      </span>
    </h3>

    <p>Want to try out Check? Sign up now for a free trial and to learn more about how your team can use Check in your daily work.</p>

    <p><%= partial "partials/typeform__check" %></p>
  </div>
</section>

<%# Explanations 1, 2, 3 %>
<section class="check--explanations">
  <div class="section-inner">
    <% explanations = t("check.explanations") %>
    <% for i in 0...explanations.length %>
      <div class="explanation">
        <div class="header-and-description">
          <h3><%= explanations[i][:header] %></h3>
          <p><%= explanations[i][:text] %></p>
        </div>

        <div class="screenshot">
          <%= partial "partials/image", :locals => {
            :type   => "jpg",
            :path   => "screenshots",
            :name  => "check--explanation-#{i+1}-#{I18n.locale.to_s}",
            :alt    => explanations[i][:alt],
            :classname  => "screenshot"
            } %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<section>
  <div class="section-inner">
    <p>Want to try out Check? Sign up now for a free trial and to learn more about how your team can use Check in your daily work.</p>
    <p>
      <%= partial "partials/typeform__check" %>
    </p>
  </div>
</section>

<%# Quotes %>
<section class="check--quotes">
  <div class="section-inner">
    <% t("check.testimonials.quotes").each do |t| %>
        <div class="quote" lang="en">
          <p>
            <span class="quote--glyph">
              &ldquo;
            </span>
            <%= t[:quote] %>
          </p>
          <p class="attribution--name">
            <%= "— #{t[:attribution]}," %>
          </p>
          <p class="attribution--website">
            <a href="<%= t[:website_url] %>" target="_blank">
              <%= t[:website_name] %>
            </a>
          </p>
        </div>
    <% end %>
  </div>
</section>

<%# History %>
<section class="typography--dense colors--inverted">
  <div class="section-inner">
    <h3><%= t("check.history.header") %></h3>
    <% t("check.history.paragraphs").each do |p| %>
      <p><%= p[:text] %></p>
    <% end %>
  </div>
</section>

<%# Newsletter %>
<section class="check--newsletter">
  <div class="section-inner">
    <h3><%= t("check.newsletter.header") %></h3>
    <p><%= t("check.newsletter.summary") %></p>

    <form class="form-inline tinyletter"
      action="https://tinyletter.com/TheChecklist"
      method="post"
      target="popupwindow"
      onsubmit="window.open('https://tinyletter.com/TheChecklist', 'popupwindow', 'scrollbars=yes,width=800,height=600');return true">
      <div class="form-group">
        <label for="tlemail"><%= t("check.newsletter.label") %></label>
        <input type="email"
          placeholder='<%= t("check.newsletter.placeholder") %>'
          name="email" id="tlemail" />
        <input type="hidden" value="1" name="embed"/>
        <input type="submit" value='<%= t("check.newsletter.button") %>' />
      </div>
    </form>
  </div>
</section>

<%# Partners %>
<section class="check--logos">
  <div class="section-inner">
    <h3><%= t("check.partners.header") %></h3>
    <p><%= t("check.partners.text") %></p>
    <ul class="logos">
      <% data.check_partner_logos.each do |image| %>
        <li>
          <%= partial "partials/image", :locals => {
              :type => image[:type],
              :name => image[:name],
              :url => image[:url]} %>
        </li>
      <% end %>
    </ul>
  </div>
</section>

<%# Github %>
<section class="colors--inverted">
  <div class="section-inner">
    <h3><%= t("check.github.header") %></h3>
    <p><%= t("check.github.text") %></p>
  </div>
</section>

<%# Footer %>
<div class="colors--inverted">
  <div class="section-inner">
    <p><%= t("check.footer") %></p>

    <p>
      <a href="/en/check/check_privacy.html">
        <%= t("footer.privacy") %>
      </a> |
      <a href="/en/check/check_tos.html">
        <%= t("footer.tos") %>
      </a>
    </p>
  </div>
</div>
