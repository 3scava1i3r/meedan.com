---
layout: "default"
slug: "bridge"
---
<!-- Branding Section -->

<div class="bridge--branding">
  <img class="screenshot" alt="Bridge screenshot"
  src="/images/screenshots/bridge4colidevice@1x.png"
  srcset="/images/screenshots/bridge4colidevice@2x.png 2x">

	<h2 class="cta-text">
    <%= t("bridge.branding.cta") %>
  </h2>

	<div id="mc_embed_signup">
		<form class="mailchimp" action="//meedan.us11.list-manage.com/subscribe/post?u=539fbe59ddc773c6592797bf2&id=16c3bf2018" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>

			<div class="form-group">
				<label for="mce-EMAIL">
          <%= t("bridge.form.label_1") %>
        </label>
				<input type="email" value="" name="EMAIL" class="required email" placeholder="example@example.com" id="mce-EMAIL">
				<input type="submit" value="<%= t('bridge.branding.form.submit')%>" name="subscribe" id="mc-embedded-subscribe" class="button">
      </div>

       <!-- Anti-spam honeypot technique -->
      <div style="position: absolute; left: -5000px;">
        <input type="text" name="b_539fbe59ddc773c6592797bf2_16c3bf2018" tabindex="-1" value="">
      </div>

      <!-- Checkbox -->
      <div class="apply-to-translate">
				<input type="checkbox" value="1" name="group[7069][1]" id="mce-group[7069]-7069-0">
        <label for="mce-group[7069]-7069-0">
          <%= t('bridge.branding.form.label_2')%>
        </label>
			</div>
		</form>

		<svg width="300"><use xlink:href="#bridge" /></svg>
		<p class="slogan"><%= t('bridge.branding.slogan')%></p>
  </div>
</div>

<!-- Explanations -->
<section class="explanations">
  <div class="description">
  <% t("bridge.explanations").each do |e| %>
    <div class="description">
      <h4><%= e[:header] %></h4>
      <p><%= e[:text] %></p>
      <img class="screenshot"
           src="/images/screenshots/<%= e[:img] %>@1x.png"
           srcset="/images/screenshots/<%= e[:img] %>@2x.png 2x"
      alt="<%= e[:alt] %>"/>
    </div>
  <% end %>
</section>

<!-- History-->
<section class="history">
<h3><%= t("bridge.history.header") %></h3>
  <% t("bridge.history.paragraphs").each do |e| %>
    <p><%= e[:text] %></p>
  <% end %>
</section>

<!-- Supporters -->
 <section class="supporters">
  <h3><%= t("bridge.supporters.header")%></h3>
  <p><%= t("bridge.supporters.tagline")%></p>
  <div class="logos">
    <a class="kf logo" href="http://www.knightfoundation.org">
      <svg width="200"><use xlink:href="#kf" /></svg>
    </a>
    <a class="ng logo" href="http://www.nationalgeographic.com">
      <svg width="200"><use xlink:href="#ng" /></svg>
    </a>
  </div>
  <p><%= t("bridge.supporters.partner_paragraph")%></p>
</section>

<!-- Footer -->
 <div class="footer">
  <p><%= t("bridge.footer") %></p>
</div>
