<!doctype html>
<html lang="<%= t(:locale) %>">

<%= partial "partials/head" %>

<body <% if I18n.locale == :ar %> dir="rtl" <% end %> class="<%= page_classes %> <%= current_page.data.slug %>">

  <% unless current_page.data.slug.match(/TOS/).present? || current_page.data.slug.match(/policy/).present? %>
    <%= partial "partials/nav.html" %>
  <% end %>

  <main>
    <%= yield %>
  </main>

  <% if build? %>
    <%= partial "partials/ga" %>
  <% end %>

	</body>
</html>
