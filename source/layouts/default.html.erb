<!doctype html>
<html lang="<%= t(:locale) %>">

<%= partial "partials/head" %>

<body <% if I18n.locale == :ar %> dir="rtl" <% end %> class="<%= page_classes %> <%= current_page.data.slug %>">

  <% unless current_page.data.slug == "bridge-privacy" || current_page.data.slug == "bridge-tos" %>
    <%= partial "partials/nav.html" %>
  <% end %>

  <main>
    <%= yield %>
  </main>

  <%= javascript_include_tag "app" %>

  <% if build? %>
    <%= partial "partials/ga" %>
  <% end %>

	</body>
</html>
