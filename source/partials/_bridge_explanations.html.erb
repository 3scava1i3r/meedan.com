<section class="explanations">
  <div class="description">
  <% t("bridge.explanations").each do |e| %>
    <div class="description">
      <h4><%= e[:header] %></h4>
      <p><%= e[:text] %></p>
      <img class="screenshot"
      src="/images/1x/screenshots/<%= e[:img] %>"
      srcset="/images/2x/screenshots/<%= e[:img] %> 2x"
      alt="<%= e[:alt] %>"/>
    </div>
  <% end %>
</section>