<%# This template assumes a standard format in en.yml — name must be like "about--methods" %>

<% classname ||= "" %>

<section class='<%= name %> <%= classname %>'>
  <div class="section-inner">
    <%# convert css dash-case to underscores %>
    <h3><%= t("#{name.split("__").join(".").gsub("-","_")}.header") %></h3>
    <h4><%= t("#{name.split("__").join(".").gsub("-","_")}.text") %></h4>
    <p><%= t("#{name.split("__").join(".").gsub("-","_")}.text_2") %></p>
  </div>
</section>
